                    {
                        @Html.ActionLink("Deactivate", "Deactive", "COPR16_MANCTYPE_MSTR", new { id = item.MTYPE_ID }, new { @class = "btn btn-primary button" });
                    }
                    else
                    {
                        @Html.ActionLink("Activate", "Active", "COPR16_MANCTYPE_MSTR", new { id = item.MTYPE_ID }, new { @class = "btn btn-primary button" });
